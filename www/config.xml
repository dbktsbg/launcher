<?xml version="1.0" encoding="UTF-8"?>

<widget
  xmlns = "http://www.w3.org/ns/widgets"
  xmlns:gap = "http://phonegap.com/ns/1.0"
  id = "com.dbktsbg.launcher"
  version = "1.0.2">
  
    <name>Meridia Launcher</name>

    <description>
        Application that launches web app - passing device id.
    </description>

    <!--<author href="http://meridiaars.com" email="support@phonegap.com">
        Meridia
    </author>-->

    <feature name="http://api.phonegap.com/1.0/device" />

   <gap:plugin name="ChildBrowser" />  <!-- latest release -->

   <access origin="http://phonegap.com" subdomains="true" />
   <access origin="http://127.0.0.1:81" subdomains="true" />
   <access origin="http://localhost:61365" subdomains="true" />

   <preference name="phonegap-version" value="2.2.0" />
   <preference name="orientation"      value="default" />
   <preference name="target-device"    value="universal" />
   <preference name="fullscreen"       value="false" />
  
</widget>
